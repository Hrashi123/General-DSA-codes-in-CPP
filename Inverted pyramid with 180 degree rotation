//inverted pyramid with 180 degree rotation
#include<iostream>
using namespace std;
int main(){
    int rows;
    cout<<"enter number of rows"<<endl;
    cin>>rows;
    for(int i=1;i<=rows;i++){
        for(int j=1;j<=rows;j++){
            if(i+j>=6){
                cout<<"*";
            }else{
                cout<<" ";
            }
        }cout<<endl;
    }
}
