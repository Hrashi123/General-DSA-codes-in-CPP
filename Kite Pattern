#include<iostream>
using namespace std;
int main(){
    for(int i=1;i<=4;i++){
        for(int j=1;j<=8-2*i;j++){
            cout<<" ";
        }
        for(int k=1;(k<=4*i-3);k++){
            cout<<"*";
        }
        cout<<endl;
    }
    for(int i=1;i<=6;i++){
        for(int j=1;j<=i;j++){
            cout<<" ";
        }
        for(int k=1;(k<=13-2*i);k++){
            cout<<"*";
        }
        cout<<endl;
    }
    for(int i=1;i<=3;i++){
        for(int j=1;j<=7-i;j++){
            cout<<" ";
        }
        for(int k=1;(k<=i);k++){
            cout<<"*"<<" ";
        }
        cout<<endl;
    }
}
