//hollow rectangular pyramid

#include<iostream>
using namespace std;
int main(){
    int rows,cols;
    cout<<"enter number of rows and cols"<<endl;
    cin>>rows>>cols;
   
    for(int i=1;i<=rows;i++){
        for(int j=1;j<=cols;j++){
            if(i==1 || i==rows){
                cout<<"*";
            }else if(j==1||j==cols){
                cout<<"*";
            }else{
                cout<<" ";
            }
        }cout<<endl;
    }
}
